<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error |%>
      <%= js add_gritter(error, title: "Héctor Tello Portfolio", sticky: false) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= form.text_field :title, class: 'form-control', placeholder: 'Título' %>
  </div>

  <div class="form-group">
    <%= form.text_area :body, class: 'form-control', rows: 20, placeholder: 'Contenido'  %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: 'btn btn-primary' %>
  </div>
<% end %>
